<div class="container">
	<div class="row">
		<div class="col-md-12 col-md-offset-3">
		<%= render('textfield') %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<% for @item in @comments %>
				<div class="row top-buffer">
					<a href="comments/<%=@item.id%>">
						<%= @item.created_at %>
						<%= @item.message %>	
					</a>
				</div>
			<% end %>
		</div>
	</div>
</div>
<%= will_paginate @comments , renderer: BootstrapPagination::Rails%>
